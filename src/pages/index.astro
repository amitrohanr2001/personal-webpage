---
import "../styles/global.css";

const name = "Amit Rohan Rajapurohita";
const title = "PhD student • Cornell University";
const email = "ar2428@cornell.edu";

const scholarUrl = "https://scholar.google.com/citations?user=iZfq0m0AAAAJ&hl=en";
const orcidUrl = "https://orcid.org/0009-0001-9788-1259";
const linkedinUrl = "https://www.linkedin.com/in/amit-rohan-rajapurohita/";
const laburl = "https://jena-xing.engineering.cornell.edu"
const djurl = "https://djena.engineering.cornell.edu"

// If you add a CV later, place it at: public/cv.pdf
const cvUrl = "/cv.pdf";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{name}</title>
    <meta name="description" content="Professional website for Amit Rohan R: research, projects, publications, and contact." />
  </head>

  <body>
    <div class="container">
      <nav class="nav">
        <div class="brand">{name}</div>
        <div style="display:flex; gap: 6px; flex-wrap: wrap;">
          <a href="/">Home</a>
          <a href="/projects">Projects</a>
          <a href="/publications">Publications</a>
          <a href="/contact">Contact</a>
        </div>
      </nav>

      <header class="card">
        <h1>{name}</h1>
        <div class="small">{title}</div>
        <p style="margin: 12px 0 0;">
          My projects are on MBE grown nitride superconductor - semiconductor devices with focus on fabrication and measurements.
          I work in the <a href={laburl} target="_blank" rel="noreferrer">Jena-Xing Lab</a> at Cornell University under the supervision of <a href={djurl} target="_blank" rel="noreferrer">Prof Debdeep Jena</a>.
          This site highlights my projects, publications, and ways to reach me.
        </p>
        <p style="margin: 12px 0 0; display:flex; gap:12px; flex-wrap:wrap; align-items:center;">
          <a href={"mailto:" + email}>{email}</a>
          <span class="small">•</span>
          <a href={scholarUrl} target="_blank" rel="noreferrer">Google Scholar</a>
          <span class="small">•</span>
          <a href={linkedinUrl} target="_blank" rel="noreferrer">LinkedIn</a>
        </p>
      </header>

      <section>
        <h2>Now</h2>
        <div class="grid">
          <div class="card">
            <b>Research focus</b>
            <ul class="list">
              <li>Superconducting resonators / Josephson Junctions / transmon qubits</li>
              <li>Superconductor - semiconductor low noise amplifiers</li>
              <li>Cryogenic DC + RF measurements</li>
              <li>Nanofabrication</li>
            </ul>
          </div>

          <div class="card">
            <b>Next</b>
            <ul class="list">
              <li>Add your CV as <code>public/cv.pdf</code></li>
              <li>Add 3–6 projects with one figure each</li>
              <li>Add Scholar / GitHub / LinkedIn links</li>
            </ul>
          </div>
        </div>
      </section>

      <section>
        <h2>Publications</h2>
        <div class="card">
          <p style="margin: 0;">
            Full list on <a href="/publications">this page</a> (auto-synced from ORCID),
            and on <a href={scholarUrl} target="_blank" rel="noreferrer">Google Scholar</a>.
          </p>
        </div>
      </section>

      <div class="footer">
        © {new Date().getFullYear()} {name}. Built with Astro.
      </div>
    </div>
  </body>
</html>